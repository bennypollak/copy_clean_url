{
    "name": "Clean copy URL",
    "description": "Copy the current URL without extraneous stuff.",
    "version": "1.0.2",
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "128": "copy-clean-128x128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "alarms", "tabs", "bookmarks", "declarativeWebRequest", "http://*/*", "https://*/*"
    ],
    "browser_action": {
      "default_popup": "hello.html",
        "default_title": "Clean copy",
        "default_icon": "copy-clean-16x16.png"
    },

    "commands": {
        "clean-copy": {
            "description": "clean-copy",
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            }
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+K"
            }
        }
    },
    "manifest_version": 2
}

{
    "name": "Clean copy URL",
    "description": "Copy the current URL without extraneous stuff.",
    "version": "1.0",
    "background": {
        "scripts": ["utils.js", "background.js"]
    },
    "icons": {
        "128": "copy-clean-128x128.png"
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],
    "browser_action": {
      "default_popup": "popup.html",
        "default_title": "Clean copy URL",
        "default_icon": "copy-clean-16x16.png"
    },

    "commands": {
        "clean-copy": {
            "description": "clean-copy",
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            }
        },
        "just-copy": {
            "description": "just-copy",
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "MacCtrl+Shift+L"
            }
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+K"
            }
        }
    },
    "manifest_version": 2
}
